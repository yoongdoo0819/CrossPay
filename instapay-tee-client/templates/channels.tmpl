{{ define "channels.tmpl" }}
<!DOCTYPE html>
<html lang="en">
<head>
    <title>InstaPay client app</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.0/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>
</head>
<body>

{{template "comm_navbar.html"}}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-2">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Channels</h3>
                </div>
                {{template "channel_menu.html"}}
            </div>
        </div>
        <div class="col-md-10">
            <h1>My channels</h1>
            <table class="table">
                <thead>
                <tr>
                    <th>CID</th>
                    <th>My address</th>
                    <th>Other's address</th>
                    <th>Status</th>
                    <th>Detail</th>
                    <th>Close</th>
                    <th>C_PRE_Y</th>
                    <th>C_PRE_N</th>
                    <th>C_POST_Y</th>
                    <th>C_POST_N</th>
                </tr>
                </thead>
                <tbody>
                {{ range $i, $channel := .channelList }}
                    <tr>
                        <form method="post" action="/channels/requests/close">
                            <td>{{ $channel.ChannelId }}</td>
                            <td>{{ $channel.MyAddress }}</td>
                            <td>{{ $channel.OtherAddress }}</td>
                            <td>{{ $channel.Status }}</td>
                            <td><button type="button" id="detail_modal" class="btn btn-light" data-toggle="modal" data-target=#modal{{$i}}>detail</button></td>

                            <input type="hidden" id="ch_id" name="ch_id" value={{ $channel.ChannelId }}>
                            <td><button type="submit" class="btn btn-light">close</button></td>
                        </form>

<td><button type="button" id="detail_modal" class="btn btn-light" data-toggle="modal" onclick="c_pre_yes()">YES</button></td>
<td><button type="button" id="detail_modal" class="btn btn-light" data-toggle="modal" onclick="c_pre_no()">NO</button></td>

<td><button type="button" id="detail_modal" class="btn btn-light" data-toggle="modal" onclick="c_post_yes()">YES</button></td>
<td><button type="button" id="detail_modal" class="btn btn-light" data-toggle="modal" onclick="c_post_no()">NO</button></td>



                    </tr>
                    <div class="modal" id="modal{{$i}}">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h4 class="modal-title">Detail request information </h4>
                                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                                </div>
				<div class="modal-body">
                                    <p style="font-size:24px">My deposit: {{ $channel.MyDeposit }}</p>
                                    <p style="font-size:24px">My balance: {{ $channel.MyBalance }}</p>
                                    <p style="font-size:24px">Reserved bal: {{ $channel.ReservedBalance }}</p>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                                </div>
                            </div>
                        </div>
                    </div>
                {{ end }}
                </tbody>
            </table>
        </div>
    </div>
</div>

</body>

<script>
function c_pre_yes() {

   alert("c_pre_yes");

   $.ajax({
    type:"POST",
    url: "/channels/requests/c_pre_yes",
    data: {
        "c_pre_answer": "1"
    },
    success: function() {
        alert("success");
    },
    error: function() {
        alert("error");
    }

   });
 
}

function c_pre_no() {

   alert("c_pre_no");

   $.ajax({
    type:"POST",
    url: "/channels/requests/c_pre_no",
    data: {
        "c_pre_answer": "1"
    },
    success: function() {
        alert("success");
    },
    error: function() {
        alert("error");
    }

   });
 
}

function c_post_yes() {

   alert("c_post_yes");

   $.ajax({
    type:"POST",
    url: "/channels/requests/c_post_yes",
    data: {
        "c_pre_answer": "1"
    },
    success: function() {
        alert("success");
    },
    error: function() {
        alert("error");
    }

   });
}

function c_post_no() {

   alert("c_post_no");

   $.ajax({
    type:"POST",
    url: "/channels/requests/c_post_no",
    data: {
        "c_pre_answer": "1"
    },
    success: function() {
        alert("success");
    },
    error: function() {
        alert("error");
    }

   });
 
}

</script>

</html>
{{ end }}
